<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitol.aust.cse.austclassmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALERM"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/project_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/project_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- fcm -->
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ClassRoutineActivity"
            android:label="Class Routine" />
        <activity
            android:name=".MenuActivity"
            android:label="Menu" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".QuizReminder"
            android:label="Quiz Reminder" />
        <activity
            android:name=".CgpaCalculator"
            android:label="CGPA Calculator" />
        <activity android:name=".Signup" />
        <activity
            android:name=".Settings"
            android:label="Settings" />
        <activity
            android:name=".ResultCheckActivity"
            android:label="Results and Information" />
        <activity
            android:name=".SetQuiz"
            android:label="Set Quiz" />
        <activity android:name=".ClassDetails" />
        <activity android:name=".BackupMark"></activity>

        <receiver android:name=".NotificationReceiver"/>

    </application>

</manifest>